<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin - Team</title>
    <%- include('../cdn.ejs')%>
  </head>
  <body>
    <div class="container-fluid m-0 p-0">
      <div class="row m-0 p-3">
        <div
          class="col-lg-2 col-md-4 col-12 p-3 text-center"
          style="background-color: #191928;height:60vh"
        >
          <h3 class="text-warning fw-bold mb-4">Restoran</h3>

          <a href="/admin" class="nav-link text-light fw-bold my-3">Services</a>
          <a href="/admin/team" class="nav-link text-warning fw-bold my-3"
            >Team</a
          >
          <a href="/admin/contact" class="nav-link text-light fw-bold my-3"
            >Contact</a
          >

          <a href="/admin/book" class="nav-link text-light fw-bold my-3"
            >Booking Details</a
          >
          <a href="/admin/user" class="nav-link text-light fw-bold my-3"
            >User Information</a
          >
          <a href="/admin/menu" class="nav-link text-light fw-bold my-3"
            >Menu</a
          >
        </div>

        <div
          class="col-lg-10 col-md-8 col-12 p-4"
          style="background-color: #191928; border-left: 10px solid white"
        >
          <!-- team -->
          <div class="row m-0 p-2" id="team">
            <button
              class="btn btn-warning text-light m-auto"
              data-bs-toggle="collapse"
              data-bs-target="#addId1"
            >
              Add Team Members
            </button>

            <!-- add team member -->
            <div class="collapse my-3" id="addId1">
              <div class="row m-0 p-0" id="service">
                <form
                  action="/admin/savemember"
                  method="post"
                  enctype="multipart/form-data"
                >
                  <div class="form-group my-3 text-light">
                    <label for="">Name</label>
                    <input
                      type="text"
                      name="name"
                      class="form-control"
                      required
                    />
                  </div>
                  <div class="form-group my-3 text-light">
                    <label for="">Role</label>
                    <input
                      type="text"
                      name="role"
                      class="form-control"
                      required
                    />
                  </div>
                  <div class="form-group my-3 text-light">
                    <label for="">Profile</label>
                    <input
                      type="file"
                      name="profile"
                      class="form-control"
                      required
                    />
                  </div>

                  <div class="form-group mt-5 text-light text-center">
                    <button class="btn btn-warning text-light m-auto">
                      Add Member
                    </button>
                  </div>
                </form>
              </div>
            </div>

            <table
              class="table table-hover table-bordered table-striped bg-light my-4"
            >
              <thead>
                <th>ID</th>
                <th>Name</th>
                <th>Role</th>
                <th>Profile</th>
                <th></th>
                <th></th>
              </thead>

              <tbody>
                <% if(data1.length==0){%>
                <tr class="text-center">
                  <td colspan="5">No Records</td>
                </tr>
                <%}%> <% data1.map((val)=>{ %>
                <tr>
                  <td><%= val.Id %></td>
                  <td><%= val.Name %></td>
                  <td><%= val.Role %></td>
                  <td>
                    <img
                      src="/uploads/<%= val.Profile %>"
                      height="60px"
                      alt=""
                    />
                  </td>
                  <td>
                    <a
                      href="/admin/delete_member/<%= val.Id%>"
                      onclick="return confirm('Are you sure ? ')"
                    >
                      <i class="fa fa-trash text-danger fw-bold"></i>
                    </a>
                  </td>

                  <td>
                    <a
                      href="/admin/edit_member/<%= val.Id%>"
                      onclick="return confirm('Are you sure ? ')"
                    >
                      <i class="fa fa-edit text-success fw-bold"></i>
                    </a>
                  </td>
                </tr>
                <%})%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
